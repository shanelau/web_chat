<% include header.html %>
<div class="container-fluid">
<form class="form-horizontal" method="post" action="/doReg"  >
<fieldset>
<legend>用户注册</legend>
 <div class="alert alert-error"><% if(message){%><%= message %><%}%></div>
<div class="control-group">
<label class="control-label" for="username">用户名</label>
<div class="controls">
<input type="text" class="input-xlarge" id="username" name="username">
</div>
</div>
<div class="control-group">
<label class="control-label" for="password">密码</label>
<div class="controls">
<input type="password" class="input-xlarge" id="password" name="password">
</div>
</div>
<div class="control-group">
<label class="control-label" for="password">确认密码</label>
<div class="controls">
<input type="password" class="input-xlarge" id="repassword" name="repassword">
</div>
</div>
<div class="form-actions">
<button type="submit" class="btn btn-primary">登录</button>
</div>
</fieldset>
</form>
</div>
